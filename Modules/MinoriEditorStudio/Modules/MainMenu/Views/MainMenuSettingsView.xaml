<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:viewModels="clr-namespace:MinoriEditorStudio.Modules.MainMenu.ViewModels"
    xmlns:p="clr-namespace:MinoriEditorStudio.Properties"
    xmlns:converters="clr-namespace:MinoriEditorStudio.Modules.MainMenu.Converters"
    x:Class="MinoriEditorStudio.Modules.MainMenu.Views.MainMenuSettingsView" mc:Ignorable="d" d:DesignHeight="300"
    d:DesignWidth="300" d:DataContext="{d:DesignInstance viewModels:MainMenuSettingsViewModel}"
    IsTabStop="False">
    <!--xmlns:l="http://gu.se/Localization"
    l:ErrorHandling.Mode="ReturnErrorInfoPreserveNeutral"-->
    <UserControl.Resources>
        <converters:CultureInfoNameConverter x:Key="CultureInfoNameConverter" />
    </UserControl.Resources>
    <StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0,3,0,0">
            <Label Width="100" Content="MainMenuSettingsColorTheme"/> <!--"{l:Static p:Resources.MainMenuSettingsColorTheme}" />-->
            <ComboBox ItemsSource="{Binding Themes}"
                      SelectedItem="{Binding SelectedTheme}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Name}" />
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0,3,0,0">
            <Label Width="100" Content="MainMenuSettingsLanguage"/> <!--l:Static p:Resources.MainMenuSettingsLanguage}" />-->
            <ComboBox ItemsSource="{Binding Languages}"
                      SelectedItem="{Binding SelectedLanguage}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Converter={StaticResource CultureInfoNameConverter}, Mode=OneWay}" />
                        </StackPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <Label Content="MainMenuSettingsLanguageRestart"/>   <!--"{l:Static p:Resources.MainMenuSettingsLanguageRestart}" />-->
        </StackPanel>
        <CheckBox IsChecked="{Binding AutoHideMainMenu}" Margin="0 5 0 0" Content="MainMenuSettingsAutoHideMainMenu"/>   <!--"{l:Static p:Resources.MainMenuSettingsAutoHideMainMenu}" />-->
    </StackPanel>
</UserControl>
